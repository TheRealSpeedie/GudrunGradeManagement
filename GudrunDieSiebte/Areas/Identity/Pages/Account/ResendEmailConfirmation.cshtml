@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Erneutes senden der E-Mail Bestätigung";
}

<h1>@ViewData["Title"]</h1>
<h2>E-Mail eintragen</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                <label asp-for="Input.Email" class="form-label text-dark"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-dark">Erneut senden</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
