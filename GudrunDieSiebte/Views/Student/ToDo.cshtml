@model IEnumerable<GudrunDieSiebte.Models.Student>

@{
    ViewData["Title"] = "ToDo";
}
<h1>@ViewData["Title"]</h1>
<ul class="nav nav-tabs" id="myTab" role="tablist">
	<li class="nav-item" role="presentation">
		<button onclick="getTodo('notDone')" class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Nicht erledigte Aufgaben</button>
	</li>
	<li class="nav-item" role="presentation">
		<button onclick="getTodo('done')" class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Erledigte Aufgaben</button>
	</li>
	<li class="nav-item" role="presentation">
		<button onclick="getTodo()" class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Alle Aufgaben</button>
	</li>
</ul>
<div class="tab-content" id="myTabContent">
	<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
		<div class="tablediv">
			<table class="table table-hover">
				<thead class="text-light bg-dark">
				<td>Wann</td>
				<td>Aufgabe</td>
				<td>Modul</td>
				<td>Lehrer</td>
				<td>Erledigt</td>
				</thead>
				<tbody id="notDoneToDoList" class="text-light">
				</tbody>
			</table>
		</div>
	</div>

	<div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
		<div class="tablediv">
			<table class="table table-hover">
				<thead class="text-light bg-dark">
				<td>Wann</td>
				<td>Aufgabe</td>
				<td>Modul</td>
				<td>Lehrer</td>
				<td>Erledigt</td>
				</thead>
				<tbody id="doneToDoList" class="text-light">
				</tbody>
			</table>
		</div>
	</div>

	<div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
		<div class="tablediv">
			<table class="table table-hover">
				<thead class="text-light bg-dark">
				<td>Wann</td>
				<td>Aufgabe</td>
				<td>Modul</td>
				<td>Lehrer</td>
				<td>Erledigt</td>
				</thead>
				<tbody id="toDoList" class="text-light">
				</tbody>
			</table>
		</div>
	</div>
</div>




